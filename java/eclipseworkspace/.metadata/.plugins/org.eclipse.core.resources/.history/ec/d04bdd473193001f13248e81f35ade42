package test;

import org.jbehave.*;
import org.jbehave.scenario.annotations.Given;
import org.jbehave.scenario.annotations.When;
import org.jbehave.scenario.steps.*;
import org.jbehave.scenario.*;

import maris.learning.unittesting.*;

public class NameSteps extends Steps {

	  private Person p;

	  @Given("a person with no name and without a maximum number of books he can borrow")
	  public void thePerson() {
	  }

	  @When("I record him to my Personal Lending Library")
	  public void iToggleTheCellAt(int column, int row) {
	      p = new Person();
	  }

	  @Then("his name should be $name")
	  public void theGridShouldLookLike(String grid) {
	      Ensure.ensureThat(p.getName(), grid);
	  }

	}