package maris.learning.unittesting;

/**
 * @author nickmeet
 *
 */
public class Person {
	private String name;
	private int maxbooks;
	/**
	 * @param name
	 * @param maxbooks the maximum number of books he can borrow
	 */
	public Person(String name, int maxbooks) {
		this.setName(name);
		this.setMaxbooks(maxbooks);
	}
	/**
	 * @param name the name to set
	 */
	public void setName(String name) {
		this.name = name;
	}
	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}
	/**
	 * @param maxbooks the maxbooks to set
	 */
	public void setMaxbooks(int maxbooks) {
		this.maxbooks = maxbooks;
	}
	/**
	 * @return the maxbooks
	 */
	public int getMaxbooks() {
		return maxbooks;
	}

}
