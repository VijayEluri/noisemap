/**
 * Personal Lending Library is a list of people to whom we loan our books.
 */
package maris.learning.unittesting;

/**
 * @author nickmeet
 *
 */
public class Person {
	private String name;
	private int maxbooks;
	/**
	 * @param name
	 * @param maxbooks the maximum number of books he can borrow
	 */
	public Person(String name, int maxbooks) {
		this.setName(name);
		this.setMaxbooks(maxbooks);
	}
	public Person() {
		this.setName("unknown name");
		this.setMaxbooks(3);
	}
	/**
	 * @param name
	 */
	public void setName(String name) {
		this.name = name;
	}
	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}
	/**
	 * @param maxbooks
	 */
	public void setMaxbooks(int maxbooks) {
		this.maxbooks = maxbooks;
	}
	/**
	 * @return
	 */
	public int getMaxbooks() {
		return maxbooks;
	}

}
